{
  "name": "@lepion/mcp-server-linear",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Linear project management with AI-powered intelligence capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:enhanced": "tsx src/enhanced-index.ts",
    "start": "node dist/index.js",
    "start:enhanced": "node dist/enhanced-index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "parse-intelligence": "node scripts/parse-linear-intelligence.js",
    "watch": "tsx --watch src/enhanced-index.ts"
  },
  "keywords": [
    "mcp",
    "linear",
    "project-management",
    "intelligence",
    "ai",
    "automation"
  ],
  "author": "Lepion",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.23.8",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}